<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".Guide">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textViewApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:fontFamily="@font/fredoka_one"
            android:text="Health , Pregnancy "
            android:textColor="@color/red"
            android:textSize="@dimen/_30ssp" />
        <TextView
            android:id="@+id/textViewAApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/fredoka_one"
            android:layout_gravity="center"
            android:text=" Guide"
            android:textColor="@color/red"
            android:textSize="@dimen/_30ssp" />

        <View
            android:layout_width="@dimen/_223sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_marginBottom="@dimen/_15sdp">
        </View>

        <ImageView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_206sdp"
            android:layout_gravity="center"

            android:background="@drawable/babyholding" />

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/every"
            android:textAllCaps="true"
            android:textColor="@color/TransparentBlack"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/like"
            android:textAllCaps="true"
            android:textColor="@color/TransparentBlack"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginRight="@dimen/_30sdp"
            android:textAllCaps="true"
            android:textColor="@color/TransparentBlack"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:text="@string/holding"
            />



    </LinearLayout>

</ScrollView>